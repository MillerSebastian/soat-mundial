# Configuración del Bot de Telegram
# Reemplaza estos valores con los tuyos

# Token del bot de Telegram (obtén esto de @BotFather)
TELEGRAM_BOT_TOKEN=tu_bot_token_aqui

# Chat ID donde recibirás los mensajes
# Puede ser tu ID personal o el ID de un grupo/canal
TELEGRAM_CHAT_ID=tu_chat_id_aqui

# Puerto del servidor (opcional)
PORT=3000

# ---------------------------
# Configuración de PayZen
# ---------------------------
# Identificador de la tienda (Shop ID) provisto por PayZen
PAYZEN_SHOP_ID=tu_shop_id

# Certificado de clave (usado para firmar las solicitudes)
PAYZEN_CERTIFICATE=tu_certificado

# Entorno de PayZen: sandbox o production
PAYZEN_ENVIRONMENT=sandbox
